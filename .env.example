# AI 摘要生成配置
# API 地址 (OpenAI 格式)
AI_SUMMARY_API=https://api.openai.com/v1/chat/completions
# API Key
AI_SUMMARY_KEY=
# 模型名称
AI_SUMMARY_MODEL=lite
# 并发数
AISUMMARY_CONCURRENCY=2
# 是否重新生成所有摘要 (true/false)
AISUMMARY_COVER_ALL=false
# 最大 Token 数 (用于截取文章内容)
AISUMMARY_MAX_TOKEN=5000
# 最小内容长度 (用于判断是否跳过)
AISUMMARY_MIN_CONTENT_LENGTH=50
# 自定义 Prompt (可选)
# AI_SUMMARY_PROMPT=...
